
<%- include("../includes/header.ejs") %>

<div class="container mt-32 mb-16 mx-auto px-16 flex justify-center">
    <div class="w-2/3 pb-10 border border-gray-200 rounded-md shadow-sm">
     <h1 class="bg-gray-300 px-6 py-3 text-gray-900 text-lg font-bold select-none">Edit New Blog</h1>
     <form action="/blog/<%= blog.id %>?_method=PUT" method="POST" class="w-full">
         <div class="w-full mt-10 px-6 flex flex-col">
             <label for="category" class="select-none font-semibold">Blog Category:</label>
             <select name="category" data-category="<%= blog.category %>" id="blog_categories" class="w-5/12 px-3 py-1 bg-white text-gray-700 border border-gray-300 rounded focus:outline-none focus:border-blue-400 cursor-pointer select-none">
                 <option value="Technology">Technology</option>
                 <option value="Art">Art</option>
                 <option value="Business">Business</option>
                 <option value="Nature">Nature</option>
                 <option value="Health">Health</option>
                 <option value="Education">Education</option>
                 <option value="Engineering">Engineering</option> 
             </select>
         </div>
         <div class="w-full mt-10 px-6 flex flex-col">
             <label for="title" class="select-none font-semibold">Blog Title:</label>
             <input type="text" name="title" class="input" value="<%= blog.title %>" placeholder="blog title" autocomplete="off">
         </div>
          <div class="w-full mt-10 px-6 flex flex-col">
             <label for="content" class="select-none font-semibold">Blog Content:</label>
             <textarea type="text" name="content" rows="5" class="input text-sm" placeholder="blog content goes here..."><%= blog.content %></textarea>
         </div>
         <button class="btn text-sm">Save Changes</button>
     </form>
    </div>
 </div>


 <script src="/js/frontend/findSelectedOption.js"></script>


<%- include("../includes/footer.ejs") %>